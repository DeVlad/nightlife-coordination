{{>nav}}
<h2 class="white">Venue details</h2>
<div class="row">
    <div class="col- col-md-4 card">
        <strong>{{venue.name}}</strong><br>
        {{>carousel}}
        <address>
        {{venue.location.city}}&nbsp;{{venue.location.country}}<br>
        <a target="_blank" href="http://www.google.com/maps/place/{{venue.location.lat}},{{venue.location.lng}}"><span class="glyphicon glyphicon-map-marker"></span></a>&nbsp;{{venue.location.address}}</address>
        {{#if venue.contact.phone}}<a href="tel:{{venue.contact.phone}}"><span class="glyphicon glyphicon-phone"></span></a>&nbsp;{{venue.contact.phone}}<br>{{/if}}
        {{venue.description}}<br>
        <span class="glyphicon glyphicon-star-empty"></span>&nbsp;Likes: {{venue.likes.count}}{{#if venue.rating}}&nbsp; Rating: {{venue.rating}}{{/if}}
        {{#if venue.url}}<a target="_blank" href="{{venue.url}}">&nbsp;Website</a>{{/if}}<br><br>
        <div id="ph-{{venue.id}}" class="btn-placeholder"></div>
        {{#if user}}
        <script src="/js/visit.js"></script>        
        <p id="visitors-list"></p>
        {{/if}}
    </div>
</div>