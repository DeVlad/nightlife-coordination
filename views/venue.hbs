{{>nav}}
<h2>Venue details</h2>

<div class="row">
    {{venue.name}}<br> {{venue.location.country}}
    <br> {{venue.location.city}}
    <br> {{venue.location.address}}

    <br> {{venue.contact.formattedPhone}}
    <br> {{venue.description}}

    <br> Rating: {{venue.rating}}<br> Likes: {{venue.likes.count}}<br> {{venue.url}}
    <br> Location: http://www.google.com/maps/place/{{venue.location.lat}},{{venue.location.lng}}<br>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div id="placeholder" class="carousel-inner">
    <div class="item active">      
    </div>

   
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<script>
    var venueId = window.location.pathname.split("/").pop();    
    var url = window.location.origin + '/venue/pictures/' + venueId;
    
    function createPictures(pictures) {
        for (var picture of pictures) {
            
            var imgTag = '<div class="item"><img src="' + picture + '" class="img-responsive carousel-image" /></div>';
            $(placeholder).append(imgTag);
        }
    }
    
    $.post(url, function(response) {        
        createPictures(response.pictures);
    }, 'json');

</script>
